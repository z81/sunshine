{
  "name": "sunshine-app",
  "version": "0.0.1",
  "private": true,
  "main": "./src/index.ts",
  "engines": {
    "npm": ">=6.4.1",
    "node": ">10.13.0"
  },
  "dependencies": {
    "@sunshine/sunshine-ui": "*",
    "history": "4.10.1",
    "i18next": "19.3.4",
    "i18next-browser-languagedetector": "4.0.2",
    "mobx": "5.15.4",
    "mobx-react-lite": "2.0.7",
    "mobx-state-tree": "3.16.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-helmet-async": "1.0.4",
    "react-i18next": "11.3.4",
    "react-scripts": "3.4.1",
    "sanitize.css": "11.0.0",
    "styled-components": "5.0.1",
    "typescript": "3.9.3"
  },
  "scripts": {
    "checkTs": "tsc --noEmit",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint --ext js,ts,tsx && stylelint \"./src/**/*.scss\"",
    "test": "react-scripts test",
    "test:all": "npm run test -- --watchAll=false",
    "test:coverage": "npm run test:all -- --coverage",
    "dev": "concurrently \"yarn watch:css --silent\" \"yarn start --silent\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run eslint -- --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run checkTs && lint-staged",
      "commit-msg": "if git-branch-is dev; then commitlint -E HUSKY_GIT_PARAMS; fi"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*/*.d.ts",
      "!src/**/*/Loadable.{js,jsx,ts,tsx}",
      "!src/**/*/types.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@fullhuman/postcss-purgecss": "2.2.0",
    "@types/jest": "25.1.4",
    "@types/node": "13.9.3",
    "@types/react": "16.9.25",
    "@types/react-dom": "16.9.3",
    "@types/react-helmet": "5.0.15",
    "@types/react-router-dom": "5.1.3",
    "@types/react-test-renderer": "16.9.2",
    "@types/rimraf": "3.0.0",
    "@types/shelljs": "0.8.7",
    "@types/styled-components": "5.0.1",
    "@types/webpack": "4.41.8",
    "@types/webpack-env": "1.15.1",
    "autoprefixer": "9.8.0",
    "chalk": "3.0.0",
    "concurrently": "5.2.0",
    "coveralls": "3.0.11",
    "cross-env": "7.0.2",
    "cssnano": "4.1.10",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "husky": "4.2.5",
    "jest-styled-components": "7.0.2",
    "jest-watch-typeahead": "0.4.2",
    "lint-staged": "10.0.8",
    "postcss-cli": "7.1.1",
    "prettier": "2.0.1",
    "stylelint": "13.2.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0"
  }
}
